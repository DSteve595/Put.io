<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.stevenschoen.putio"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="9"
		android:targetSdkVersion="15" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/Theme.Putio"
		android:windowSoftInputMode="adjustPan" >
		<activity
			android:name=".activities.Putio"
			android:launchMode="singleTask" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activities.setup.Login" >
		</activity>
		<activity android:name=".activities.setup.Setup" >
		</activity>
		<activity android:name=".activities.FileDetailsActivity" >
		</activity>
		<activity android:name=".activities.Preferences" >
		</activity>

		<service android:name=".PutioOpenFileService" >
		</service>
	</application>

</manifest>