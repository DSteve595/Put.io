<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/setup_root"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	tools:context=".activities.setup.Setup" >

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center_vertical"
		android:orientation="horizontal" >

		<LinearLayout
			android:id="@+id/logoHolder"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical" >

			<ImageView
				android:id="@+id/imageView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:contentDescription="Logo"
				android:maxHeight="240dp"
				android:maxWidth="240dp"
				android:scaleType="fitCenter"
				android:src="@drawable/biglogo" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/textHolder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingBottom="8dp"
			android:paddingLeft="@dimen/padding_large"
			android:paddingRight="@dimen/padding_large"
			android:paddingTop="8dp" >

			<TextView
				android:id="@+id/text_setup_intro1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/intro1"
				android:textAppearance="?android:attr/textAppearanceLarge" />

			<TextView
				android:id="@+id/text_setup_intro2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/intro2"
				android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>