	android:layout_height="fill_parent"
	android:orientation="horizontal"
	android:paddingRight="@dimen/padding_large" >

	<FrameLayout
		android:id="@+id/fragment_files"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
