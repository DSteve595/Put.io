<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

	<solid android:color="#FFFFFF" />

	<stroke
		android:width="1dp"
		android:color="@color/putio_dark" />

	<padding
		android:bottom="1dp"
		android:left="1dp"
		android:right="1dp"
		android:top="1dp" />

	<selector xmlns:android="http://schemas.android.com/apk/res/android" >
		<item
			android:drawable="@drawable/btn_putio_normal"
			android:state_enabled="true"
			android:state_window_focused="false"/>
		<item
			android:drawable="@drawable/btn_putio_disabled"
			android:state_enabled="false"
			android:state_window_focused="false"/>
		<item
			android:drawable="@drawable/btn_putio_pressed"
			android:state_pressed="true"/>
		<item
			android:drawable="@drawable/btn_putio_focused"
			android:state_enabled="true"
			android:state_focused="true"/>
		<item
			android:drawable="@drawable/btn_putio_normal"
			android:state_enabled="true"/>
		<item
			android:drawable="@drawable/btn_putio_disabled_focused"
			android:state_focused="true"/>
		<item android:drawable="@drawable/btn_putio_disabled"/>
	</selector>

</shape>