<RelativeLayout
    android:id="@+id/files_up"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/card_bg_r4_clickable_withshadow"
    android:focusable="true">

    <ImageView
        android:id="@+id/image_up"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back"/>

    <de.ankri.views.AutoScaleTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@id/image_up"
        android:layout_toRightOf="@id/image_up"
        android:text="Go back to the previous folder"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
</RelativeLayout>