<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_filedetails"
        layout="@layout/filedetails_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/toolbar_filedetails"
        android:orientation="horizontal"
        android:weightSum="2">

        <include
            android:id="@+id/filedetailspreview"
            layout="@layout/filepreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="28dp"
            android:paddingRight="28dp">

            <include layout="@layout/filename" />

            <LinearLayout
                android:id="@+id/createdHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_fileDetailsCreatedStatic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/created" />

                <TextView
                    android:id="@+id/text_fileDetailsCreatedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_fileDetailsCreatedStaticAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/at" />

                <TextView
                    android:id="@+id/text_fileDetailsCreatedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/buttonbar"
                style="@style/ButtonBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_filedetails_apply"
                    style="@style/ButtonBar.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apply"
                    android:theme="@style/Theme.Putio.FileDetails" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>