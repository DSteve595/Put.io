<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Putio" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/putio_accent</item>
        <item name="colorPrimaryDark">@color/putio_accent_dark</item>
        <item name="colorAccent">@color/putio_accent</item>
        <item name="windowActionBar">false</item>
        <item name="android:dialogTheme">@style/Putio.Dialog</item>
        <item name="android:textColorPrimary">#DE000000</item>
        <item name="android:textColorSecondary">#8A000000</item>
    </style>

    <style name="Theme.Putio.FileDetails" parent="Theme.Putio">
        <item name="android:theme">@style/Theme.Putio</item>
        <item name="colorPrimary">#9E9E9E</item>
        <item name="colorPrimaryDark">#757575</item>
        <item name="colorAccent">@color/putio_accent</item>
        <item name="colorButtonNormal">@color/putio_accent</item>
    </style>

    <style name="Theme.Putio.CastPlayer" parent="Theme.AppCompat">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Putio.ActionBar.Transparent</item>
    </style>

    <style name="Putio.CastMiniController" parent="Theme.Putio">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Putio.ActionBar.Transparent" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@null</item>
    </style>

    <style name="Putio.TextAppearance.DialogTitle" parent="TextAppearance.AppCompat.Title" />

    <style name="ButtonBar">
        <item name="android:layout_margin">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="ButtonBar.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <declare-styleable name="com.stevenschoen.putio.SizePreference">
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
    </declare-styleable>

    <style name="Putio.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:theme">@style/Theme.Putio</item>
    </style>

    <style name="Putio.DialogOrActivity" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:theme">@style/Theme.Putio</item>
    </style>

</resources>