<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Putio" parent="@android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarWidgetTheme">@style/Theme.Putio.Dark</item>
        <item name="android:actionBarItemBackground">@drawable/putio_clickable_actionbutton</item>
        <item name="android:actionBarStyle">@style/Putio.ActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/Putio.ActionBarTabBarStyle</item>
        <item name="android:actionBarTabStyle">@style/Putio.ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/Putio.DropDownNav</item>
        <item name="android:buttonStyle">@style/Putio.Button</item>
        <item name="android:dialogTheme">@style/Putio.Dialog</item>
        <item name="android:dropDownListViewStyle">@style/Putio.DropDownListView</item>
        <item name="android:fastScrollThumbDrawable">@drawable/putio_fastscroll_thumb</item>
        <item name="android:popupMenuStyle">@style/Putio.PopupMenu</item>
        <item name="android:spinnerStyle">@style/Putio.Spinner</item>
        <item name="android:editTextStyle">@style/Putio.EditText</item>
        <item name="android:checkboxStyle">@style/Putio.CheckBox</item>
        <item name="android:listViewStyle">@style/Putio.ListView</item>
        <item name="android:textColorPrimary">#DE000000</item>
        <item name="android:textColorSecondary">#8A000000</item>
    </style>

    <style name="Theme.Putio.Dark" parent="@android:Theme.Holo">
        <item name="android:dropDownListViewStyle">@style/Putio.DropDownListView</item>
        <item name="android:actionButtonStyle">@style/Putio.ActionButton</item>
    </style>

    <style name="Widget.Putio" parent="@android:style/Widget.Holo.Light" />

    <style name="Theme.Putio.CastPlayer" parent="@style/Theme.AppCompat">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Putio.ActionBar.Transparent</item>
    </style>

    <style name="Putio.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Putio.ActionBar.Transparent" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@null</item>
    </style>

    <style name="Putio.ActionButton" parent="@android:Widget.Holo.Light.ActionButton">
        <item name="android:background">@drawable/putio_clickable_actionbutton</item>
    </style>

    <style name="Putio.PopupMenu" parent="@android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_putio</item>
    </style>

    <style name="Putio.DropDownListView" parent="@android:Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/putio_clickable_actionbutton</item>
        <item name="android:textColor">#fff200</item>
    </style>

    <style name="Putio.DropDownNav" parent="@style/Widget.Putio">
        <item name="android:background">@drawable/spinner_background_ab_putio</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_putio</item>
        <item name="android:dropDownSelector">@drawable/putio_clickable_actionbutton</item>
    </style>

    <style name="Putio.ActionBarTabStyle" parent="@android:Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/putio_tab_indicator</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Putio.ActionBarTabBarStyle" parent="@android:Widget.Holo.ActionBar.TabBar">
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:requiresFadingEdge">none</item>
    </style>

    <style name="Putio.ListView" parent="@android:Widget.Holo.Light.ListView">
        <item name="android:listSelector">@drawable/putio_clickable_list</item>
    </style>

    <style name="Putio.Spinner" parent="@android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_putio</item>
    </style>

    <style name="Putio.ButtonBar" parent="@style/Widget.Putio">
        <item name="android:background">@color/putio_dark</item>
        <item name="android:divider">?android:attr/dividerHorizontal</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="Putio.ButtonBar.Transparent" parent="@style/Putio.ButtonBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Putio.ButtonBar.Dialog" parent="@style/Putio.ButtonBar.Transparent" />

    <style name="Putio.ButtonBar.Button" parent="@style/Widget.Putio">
        <item name="android:background">@drawable/putio_clickable_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <declare-styleable name="com.stevenschoen.putio.SizePreference">
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
    </declare-styleable>

    <style name="Putio.Dialog" parent="@style/Theme.Putio">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_putio</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:buttonBarStyle">@style/Putio.ButtonBar</item>
        <item name="android:textViewStyle">@android:style/Widget.TextView</item>
    </style>

    <style name="TextAppearance.Putio.DialogWindowTitle" parent="@style/Widget.Putio">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Putio.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_putio</item>
    </style>

    <style name="Putio.MenuTextAppearance" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Putio.Button" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/btn_putio</item>
    </style>

    <style name="Putio.EditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edit_text_putio</item>
    </style>

    <style name="PagerTitleStrip">
        <item name="android:background">@drawable/titlestrip</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Putio.DialogOrActivity" parent="@style/Theme.Putio" />

</resources>