<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Putio" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/putio_accent</item>
        <item name="colorPrimaryDark">@color/putio_accent_dark</item>
        <item name="colorAccent">@color/putio_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:dialogTheme">@style/Putio.Dialog</item>

        <item name="android:listChoiceBackgroundIndicator">@drawable/putio_clickable_list</item>
        <item name="listChoiceBackgroundIndicator">@drawable/putio_clickable_list</item>
    </style>

    <style name="Theme.Putio.FileDetails" parent="Theme.Putio">
        <item name="android:theme">@style/Theme.Putio</item>
        <item name="colorPrimary">#9E9E9E</item>
        <item name="colorPrimaryDark">#757575</item>
        <item name="colorAccent">@color/putio_accent</item>
        <item name="colorButtonNormal">@color/putio_accent</item>
    </style>

    <style name="Theme.Putio.CastPlayer" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
    </style>

    <style name="Putio.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:theme">@style/Theme.Putio</item>
        <item name="theme">@style/Theme.Putio</item>
    </style>

    <style name="Putio.CastMiniController" parent="Theme.Putio">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Putio.ActionBar.Transparent" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@null</item>
    </style>

    <style name="Putio.TextAppearance.DialogTitle" parent="TextAppearance.AppCompat.Title" />

    <style name="ButtonBar">
        <item name="android:theme">@style/Theme.Putio</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="ButtonBar.Button" parent="android:Widget.Holo.Light.Button.Small">
        <item name="android:background">@drawable/putio_clickable_rounded_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="ButtonBar.Button.Transparent" parent="ButtonBar.Button">
        <item name="android:background">@drawable/putio_clickable_rounded</item>
    </style>

    <declare-styleable name="com.stevenschoen.putio.SizePreference">
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
    </declare-styleable>

    <style name="Putio.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:theme">@style/Theme.Putio</item>
        <item name="theme">@style/Theme.Putio</item>
    </style>

    <style name="Putio.DialogOrActivity" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:theme">@style/Theme.Putio</item>
        <item name="theme">@style/Theme.Putio</item>
        <item name="colorPrimaryDark">@color/putio_accent_dark</item>
    </style>
</resources>