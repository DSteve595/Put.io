<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/putio_accent_threequarters" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/putio_accent_half" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/putio_accent_half" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="90" android:endColor="#E0D0D0D0" android:startColor="#D0D0D0" />
        </shape>
    </item>

</selector>