<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sizePreference="http://schemas.android.com/apk/res/com.stevenschoen.putionew" >

    <PreferenceCategory
        android:summary="Storage"
        android:title="Storage" >
        <com.stevenschoen.putionew.SizePreference
            android:defaultValue="5"
            android:dialogTitle="Cache size"
            android:key="maxCacheSizeMb"
            android:persistent="true"
            android:summary="@string/cacheexplanation"
            android:title="@string/cachesize"
            sizePreference:maxValue="25"
            sizePreference:minValue="1" />
    </PreferenceCategory>

</PreferenceScreen>